{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "launch (console)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "au-build",
            "program": "${workspaceRoot}/Presentation.WebSPA/bin/Debug/netcoreapp2.0/Presentation.WebSPA.dll",
            "args": [],
            "cwd": "${workspaceRoot}/Presentation.WebSPA/",
            "stopAtEntry": false,
            "console": "internalConsole",
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "^\\s*Now listening on:\\s+(https?://\\S+)"
            }
        },
        {
            "name": "launch (web)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "au-build-watch",
            "program": "${workspaceRoot}/Presentation.WebSPA/bin/Debug/netcoreapp2.0/Presentation.WebSPA.dll",
            "args": [],
            "cwd": "${workspaceRoot}/Presentation.WebSPA/",
            "stopAtEntry": false,
            "launchBrowser": {
                "enabled": true,
                "args": "${auto-detect-url}",
                "windows": {
                    "command": "cmd.exe",
                    "args": "/C start ${auto-detect-url}"
                },
                "osx": {
                    "command": "open"
                },
                "linux": {
                    "command": "xdg-open"
                }
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceRoot}/Presentation.WebSPA/Views"
            }
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickProcess}"
        }
    ]
}