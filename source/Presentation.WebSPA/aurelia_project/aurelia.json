{
    "name": "aurelia-vanilla.presentation-webspa",
    "type": "project:application",
    "packageManager": "yarn",
    "transpiler": {
        "id": "typescript",
        "fileExtension": ".ts",
        "dtsSource": [
            "./custom_typings/**/*.d.ts",
            "./types/**/*.d.ts"
        ],
        "source": [
            "src/**/*.ts"
        ]
    },
    "markupProcessor": {
        "source": [
            "src/**/*.html"
        ]
    },
    "cssProcessor": {
        "source": [
            "src/**/*.scss"
        ]
    },
    "jsonProcessor": {
        "source": [
            "src/**/*.json"
        ]
    },
    "paths": {
        "root": "src",
        "resources": "resources",
        "common": "common",
        "elements": "resources/elements",
        "attributes": "resources/attributes",
        "valueConverters": "resources/value-converters",
        "bindingBehaviors": "resources/binding-behaviors"
    },
    "platform": {
        "id": "aspnetcore",
        "displayName": "ASP.NET Core",
        "port": 5100,
        "output": "wwwroot/js",
        "index": "pages/shared/_AureliaBundleInclude.cshtml",
        "baseDir": "./wwwroot",
        "baseUrl": "js"
    },
    "build": {
        "targets": [
            {
                "id": "aspnetcore",
                "displayName": "ASP.NET Core",
                "port": 5100,
                "output": "wwwroot/js",
                "index": "pages/shared/_AureliaBundleInclude.cshtml",
                "baseDir": "./wwwroot",
                "baseUrl": "/js"
            }
        ],
        "options": {
            "minify": {
                "prod": {
                    "ie8": true,
                    "output": {
                        "max_line_len": 1000000
                    }
                },
                "stage": {
                    "ie8": true,
                    "output": {
                        "max_line_len": 1000000
                    }
                }
            },
            "sourcemaps": "dev & stage",
            "rev": {
                "dev": false,
                "stage": false,
                "prod": true
            },
            "cache": "dev & stage"
        },
        "bundles": [
            {
                "name": "app-bundle.js",
                "source": {
                    "include": [
                        "[**/*.js]",
                        "**/*.{json,css,html}"
                    ],
                    "exclude": [
                        "**/rolodex-spa/**/*",
                        "**/pokemon-spa/**/*"
                    ]
                },
                "dependencies": [
                    {
                        "name": "bootstrap",
                        "path": "../node_modules/bootstrap",
                        "deps": [
                            "popper.js"
                        ],
                        "resources": []
                    }
                ]
            },
            {
                "name": "rolodex-spa-bundle.js",
                "source": [
                    "[**/rolodex-spa/**/*.js]",
                    "**/rolodex-spa/**/*.{json,css,html}"
                ],
                "dependencies": [
                    "moment"
                ]
            },
            {
                "name": "pokemon-spa-bundle.js",
                "source": [
                    "[**/pokemon-spa/**/*.js]",
                    "**/pokemon-spa/**/*.{json,css,html}"
                ],
                "dependencies": []
            },
            {
                "name": "vendor-bundle.js",
                "prepend": [
                    "node_modules/whatwg-fetch/dist/fetch.umd.js",
                    "node_modules/promise-polyfill/dist/polyfill.min.js",
                    "node_modules/requirejs/require.js"
                ],
                "dependencies": [
                    "aurelia-bootstrapper",
                    "aurelia-loader-default",
                    "aurelia-pal-browser",
                    "text",
                    {
                        "name": "aurelia-testing",
                        "env": "dev"
                    }
                ]
            }
        ],
        "loader": {
            "type": "require",
            "configTarget": "vendor-bundle.js",
            "includeBundleMetadataInConfig": "auto",
            "plugins": [
                {
                    "name": "text",
                    "extensions": [
                        ".html",
                        ".css"
                    ],
                    "stub": false
                }
            ]
        },
        "copyFiles": {
            "node_modules/bootstrap/dist/css/bootstrap.min.*": "wwwroot/css",
            "node_modules/bootstrap/dist/js/bootstrap.bundle.*": "wwwroot/js"
        }
    }
}