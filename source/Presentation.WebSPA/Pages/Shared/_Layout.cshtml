<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title>@ViewData["Title"] - Aurelia Vanilla Template</title>

    <environment names="Development">
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
    <environment names="Staging,Production">
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>
    @RenderSection("Styles", false)
    @if (!IsSectionDefined("Styles"))
    {
        <link asp-fallback-href="~/css/bootstrap.min.css" rel="stylesheet" asp-fallback-test-class="sr-only"
        asp-fallback-test-property="position" asp-fallback-test-value="absolute"
        href="https://cdn.jsdelivr.net/npm/bootswatch@5.1.3/dist/sketchy/bootstrap.min.css"
        integrity="sha256-H4KK1tCvREdvbtMG+OoveMdEkIsulg1bO5bJJpEBRyc=" crossorigin="anonymous" />
    }
</head>

<body class="d-flex flex-column min-vh-100">
    <header>
        <div class="container">
            <nav class="navbar navbar-light bg-light navbar-expand-sm border-bottom mb-3">
                <a class="navbar-brand" asp-area="" asp-page="Index">Aurelia Samples</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="Rolodex">Rolodex</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="Pokemon">Pokedex</a>
                        </li>
                    </ul>
                </div>
            </nav>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="mt-auto">
        <div class="border-top container">
            &copy; 2022 - Aurelia Samples - <a href="#">Privacy</a>
        </div>
    </footer>
    @RenderSection("Scripts", false)
    @if (!IsSectionDefined("Scripts"))
    {
        <!--TODO: Add local copies-->

        <script asp-fallback-src="~/js/bootstrap.min.js" asp-fallback-test="window.bootstrap"
        src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.1.3/js/bootstrap.bundle.min.js"
        integrity="sha512-pax4MlgXjHEPfCwcJLQhigY7+N8rt6bVvWLFyUMuxShv170X53TRzGPmPkZmGBhk+jikR8WBM4yl7A9WMHHqvg=="
        crossorigin="anonymous"></script>
    }
</body>

</html>