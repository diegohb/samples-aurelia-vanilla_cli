{
    "compileOnSave": false,
    "compilerOptions": {
        "sourceMap": true,
        "target": "ES6",
        "module": "ES6",
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "baseUrl": "src",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "typeRoots": [
            "node_modules/@types",
            "./custom_typings/**/*.d.ts"
        ]
    },
    "include": [
        "./src/**/*.ts",
        "./test/**/*.ts"
    ],
    "atom": {
        "rewriteTsconfig": false
    }
}