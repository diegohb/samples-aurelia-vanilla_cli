{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "args": [
                "build"
            ],
            "type": "process",
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "au-build",
            "command": "au",
            "args": [
                "build"
            ],
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}/${config:app.spa-name}/"
            },
            "dependsOn": [
                "build"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "isBackground": false,
            "problemMatcher": [
                "$gulp-tsc"
            ]
        },
        {
            "label": "au-build-watch",
            "command": "au",
            "args": [
                "build",
                "--watch"
            ],
            "type": "shell",
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/${config:app.spa-name}/"
            },
            "dependsOn": [
                "build"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated"
            },
            "isBackground": true,
            "problemMatcher": [
                "$gulp-tsc"
            ]
        },
        {
            "label": "au-test",
            "command": "au",
            "args": [
                "test"
            ],
            "options": {
                "cwd": "${workspaceFolder}/${config:app.spa-name}/"
            },
            "dependsOn": [
                "build"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "shared",
                "focus": true
            },
            "type": "shell",
            "problemMatcher": [
                "$gulp-tsc"
            ]
        }
    ]
}